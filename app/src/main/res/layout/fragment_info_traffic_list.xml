<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_info_traffic_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qferiz.trafficjam.fragment.FragmentInfoTrafficJamList">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeInfoTraffic"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listRecyclerInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabTrafficList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="@dimen/fab_marginTopBottom"
        android:layout_marginBottom="@dimen/fab_marginTopBottom"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:src="@drawable/ic_action_directions"
        app:fabSize="normal" />

</android.support.design.widget.CoordinatorLayout>


